source 'https://rubygems.org'

gem 'rake'
gem 'kramdown'
# jekyll depends on kramdown-parser-gfm, but fails to declare it
gem 'kramdown-parser-gfm'
gem 'jekyll', '~> 3'
gem 'jekyll-feed'
gem 'jekyll-paginate'
gem 'jekyll-redirect-from'
gem 'tzinfo',           :platforms => [:mswin, :mingw, :x64_mingw]
gem 'tzinfo-data',      :platforms => [:mswin, :mingw, :x64_mingw]

# For testing our rendered iCalendar file
gem 'icalendar'

# For testing output
gem 'html-proofer', '~> 3'

# Avoid polling on windows
gem 'wdm', '>= 0.1.0'

# For local Ruby 3 support; works around https://github.com/github/pages-gem/issues/752
gem "webrick", "~> 1.7"
